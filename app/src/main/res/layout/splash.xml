<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:padding="80dp" >

        <TextView
            android:id="@+id/and_text_view"
            style="@style/TitleText"
            android:textColor="@color/medium_brown"
            android:textSize="210dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/sun_text_view"

            android:text="&amp;" />

        <TextView
            android:id="@+id/sammy_text_view"
            style="@style/TitleText"
            android:textColor="@color/dark_brown"
            android:textSize="72dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"

            android:text="Sammy" />

        <TextView
            android:id="@+id/sun_text_view"
            style="@style/TitleText"
            android:textColor="@color/dark_brown"
            android:textSize="72dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:layout_below="@+id/sammy_text_view"

            android:text="Sun" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>