<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="0dp"
        android:background="@drawable/rectangle">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/rectangle_left_rounded"
            android:padding="10dp">

            <TextView
                android:id="@+id/list2_brand_text_view"
                style="@style/SmallHeaderText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Michael Kors" />

            <TextView
                android:id="@+id/list2_name_text_view"
                style="@style/NormalText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hamilton Legacy"
                android:layout_marginBottom="15dp"/>

            <TextView
                android:id="@+id/list2_price_text_view"
                style="@style/NormalText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$1,068.35" />

        </LinearLayout>

        <ImageView
            android:id="@+id/list2_image_view"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:padding="10dp"
            android:src="@drawable/clutch" />

    </LinearLayout>

</androidx.cardview.widget.CardView>